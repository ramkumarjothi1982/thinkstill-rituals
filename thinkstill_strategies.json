  "strategies": {
    "CBT_CATASTROPHIZING": {
      "therapy": "CBT",
      "steps": [
        {
          "variants": [
            "Identify the exact outcome the mind is predicting.",
            "Name the future scenario being treated as inevitable."
          ]
        },
        {
          "variants": [
            "Reduce the prediction to a probability percentage.",
            "Translate certainty into likelihood."
          ]
        },
        {
          "variants": [
            "Name one neutral outcome that is being ignored.",
            "Introduce a non-catastrophic alternative."
          ]
        },
        {
          "variants": [
            "Limit the prediction to the next ten minutes.",
            "Compress the timeline to what is knowable now."
          ]
        },
        {
          "variants": [
            "Notice how urgency drops when certainty dissolves.",
            "Observe the system recalibrate without force."
          ]
        }
      ],
      "closures": [
        "End by labeling the thought as an unverified projection.",
        "Close without resolving the future."
      ],
      "mantras": [
        "Predictions are not outcomes.",
        "Urgency is not evidence."
      ]
    },

    "BREATHWORK": {
      "therapy": "Pranayama",
      "steps": [
        {
          "variants": [
            "Place one hand on the lower abdomen.",
            "Anchor attention to the belly."
          ]
        },
        {
          "variants": [
            "Extend the exhale longer than the inhale.",
            "Allow breath to descend and lengthen."
          ]
        },
        {
          "variants": [
            "Pause briefly after the exhale.",
            "Let the system idle between breaths."
          ]
        },
        {
          "variants": [
            "Allow the next inhale to arrive unaided.",
            "Do not pull the breath in."
          ]
        },
        {
          "variants": [
            "Continue until pressure reduces.",
            "Stop when the nervous system softens."
          ]
        }
      ],
      "closures": [
        "Resume movement slowly.",
        "Remain still for two breaths."
      ],
      "mantras": [
        "Breath leads, panic follows.",
        "The body knows how to slow."
      ]
    },

    "ACT_DEFUSION": {
      "therapy": "ACT",
      "steps": [
        {
          "variants": [
            "Notice the thought without entering it.",
            "Watch the thought as an object."
          ]
        },
        {
          "variants": [
            "Prefix the thought with 'I am noticing'.",
            "Insert distance between you and the content."
          ]
        },
        {
          "variants": [
            "Allow the thought to pass unchallenged.",
            "Do not correct or continue it."
          ]
        },
        {
          "variants": [
            "Return attention to physical sensation.",
            "Anchor awareness outside the narrative."
          ]
        },
        {
          "variants": [
            "Resume activity without resolving meaning.",
            "Continue without agreement."
          ]
        }
      ],
      "closures": [
        "End without analysis.",
        "Close by choosing presence."
      ],
      "mantras": [
        "Thoughts are events, not commands.",
        "Meaning is optional."
      ]
    },

    "STILLNESS": {
      "therapy": "Stillness",
      "steps": [
        {
          "variants": [
            "Allow the internal field to settle.",
            "Suspend effort without collapse."
          ]
        },
        {
          "variants": [
            "Notice what is already quiet.",
            "Locate the absence of movement."
          ]
        },
        {
          "variants": [
            "Do not intervene.",
            "Let settling complete itself."
          ]
        },
        {
          "variants": [
            "Remain without evaluation.",
            "End without commentary."
          ]
        }
      ],
      "closures": [
        "Rest in silence briefly.",
        "Let the system idle."
      ],
      "mantras": [
        "Stillness restores order.",
        "Silence precedes clarity."
      ]
    }
  }
